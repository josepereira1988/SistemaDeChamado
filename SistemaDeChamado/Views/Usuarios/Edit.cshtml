@model SistemaDeChamado.Models.EditarUsuariosViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1></h1>

<h4>Editar Usuarios</h4>
<hr />
<div class="row" onLoad="OnSelect()">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                        </label>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group form-check" id="GruopClienteMaster" hidden>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ClienteMaster" /> @Html.DisplayNameFor(model => model.ClienteMaster)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <input asp-for="Usuario" class="form-control" readonly />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classificacao" class="control-label"></label>
                <select asp-for="Classificacao" class="form-control" id="ClassificacaoID" value="@Model.Classificacao" asp-items="Html.GetEnumSelectList<SistemaDeChamado.Essencial.ControleUsuario>()" onchange="OnSelect()">
                </select>
                <span asp-validation-for="Classificacao" class="text-danger"></span>
            </div>
            <div class="form-group" id="GruopCliente" hidden>
                <label asp-for="clienteId" id="ClienteID" class="control-label"></label>
                <select asp-for="clienteId" class="form-control" asp-items="ViewBag.ClienteId">
                </select>
                <span asp-validation-for="clienteId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Voltar</a>|<input type="submit" value="Atualizar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
</div>
<script>
    if (document.getElementById("ClassificacaoID").value == 2){
            document.getElementById("GruopCliente").hidden = false;
            document.getElementById("GruopClienteMaster").hidden = false;
    }
    function OnSelect() {
        var classificao = document.getElementById("ClassificacaoID");
        if (classificao.value == 2) {
            document.getElementById("GruopCliente").hidden = false;
            document.getElementById("GruopClienteMaster").hidden = false;
        } else {
            document.getElementById("ClienteID").value = 0;
            document.getElementById("GruopCliente").hidden = true;
            document.getElementById("GruopClienteMaster").hidden = true;
        }
    }
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
